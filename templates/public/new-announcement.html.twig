{% extends 'base.html.twig' %}

{% block title %}Ajouter une annonce - Learn in Project{% endblock %}

{% block body %}
    <div class="preferences">
        <div class="preferences__form">
            <h1 class="text-center text-primary my-4">Ajouter une annonce</h1>
            {{ form_start(form) }}
            <div class="row">
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.number_of_groups) }}
                {{ form_row(form.number_of_students) }}
                {{ form_row(form.domain) }}
            </div>
            <button type="submit" class="btn btn-primary mt-4">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}